<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bd.edu.seu.tcms.user.UserPayBill">
   <children>
      <ImageView fitHeight="170.0" fitWidth="166.0" pickOnBounds="true">
         <image>
            <Image url="@Images/TC%20profile.jpg" />
         </image>
      </ImageView>
      <Button layoutY="181.0" mnemonicParsing="false" onAction="#userDashboardEvent" prefHeight="26.0" prefWidth="166.0" style="-fx-background-color: #E0CDBA;" text="🏠 Dashboard" />
      <Button layoutY="221.0" mnemonicParsing="false" onAction="#userBuyItemEvent" prefHeight="26.0" prefWidth="166.0" style="-fx-background-color: #E0CDBA;" text="➕ Buy Items  " />
      <Button layoutX="-1.0" layoutY="259.0" mnemonicParsing="false" onAction="#userPayBillEvent" prefHeight="26.0" prefWidth="166.0" style="-fx-background-color: #E0CDBA; -fx-border-color: black;" text="💰 Pay Bill" />
      <Button layoutY="297.0" mnemonicParsing="false" onAction="#userInventoryEvent" prefHeight="26.0" prefWidth="166.0" style="-fx-background-color: #E0CDBA;" text="📦 Inventory" />
      <Button layoutY="334.0" mnemonicParsing="false" onAction="#userSignOutEvent" prefHeight="26.0" prefWidth="166.0" style="-fx-background-color: #E0CDBA;" text="⚙ SignOut" />
      <Separator layoutX="163.0" layoutY="9.0" orientation="VERTICAL" prefHeight="354.0" prefWidth="10.0" />
      <Label layoutX="290.0" layoutY="14.0" prefHeight="27.0" prefWidth="183.0" text="Confirm Your Order">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <TableView fx:id="payBillTableView" layoutX="179.0" layoutY="70.0" onMouseClicked="#selectedRowEvent" prefHeight="193.0" prefWidth="406.0">
        <columns>
          <TableColumn fx:id="nameColumn" prefWidth="124.0" text="Name" />
            <TableColumn fx:id="quantityColumn" prefWidth="90.39996337890625" text="Quantity" />
            <TableColumn fx:id="priceColumn" prefWidth="96.800048828125" text="Price per Item" />
            <TableColumn fx:id="totalPriceColumn" prefWidth="96.00003051757812" text="Total" />
        </columns>
      </TableView>
      <Button layoutX="212.0" layoutY="334.0" mnemonicParsing="false" onAction="#deleteEvent" prefHeight="26.0" prefWidth="70.0" text="Delete" />
      <Button layoutX="318.0" layoutY="334.0" mnemonicParsing="false" onAction="#confirmPurchaseEvent" style="-fx-background-color: #E0CDBA;" text="Confirm Purchase" />
      <Label layoutX="420.0" layoutY="280.0" text="Grand Total: ">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <Label fx:id="grandTotalField" layoutX="506.0" layoutY="281.0" text="00 TK">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="addCouponField" layoutX="179.0" layoutY="280.0" prefHeight="26.0" prefWidth="116.0" promptText="Add Coupon" />
      <Button layoutX="300.0" layoutY="280.0" mnemonicParsing="false" onAction="#applyCouponEvent" prefHeight="26.0" prefWidth="49.0" style="-fx-background-color: #E0CDBA;" text="Apply" />
      <Label layoutX="222.0" layoutY="41.0" text="Please review your items before confirming the purchase." />
      <RadioButton fx:id="paymentGroup" layoutX="457.0" layoutY="310.0" mnemonicParsing="false" text="Cash On Delivery">
         <toggleGroup>
            <ToggleGroup fx:id="paymentRadio" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="paymentGroup" layoutX="457.0" layoutY="338.0" mnemonicParsing="false" text="OnlinePayment" toggleGroup="$paymentRadio" />
   </children>
</AnchorPane>
